@using WebInvoice.Dto.Reason
@model ReasonDto
@inject WebInvoice.Services.IUserCompanyTemp userCompanyData

<div class="row">
    <partial name="~/Views/CompanySettings/_NavBarSettingsPartial.cshtml" />
    <div class="container col-md-9">
        <h3 class="text-center">@userCompanyData.CompanyName</h3>
        <h3 class="text-center">Редактиране</h3>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-controller="Reason" asp-action="Edit" method="post">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="selectList">Избери група ДДС:</label>
                        <select asp-for="VatTypeId" asp-items="this.ViewBag.SelectVatType" class="form-control">
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Промени</button>
                    <a class="btn btn-secondary" asp-controller="Reason" asp-action="index">Отказ</a>
                </form>
            </div>
        </div>
    </div>
</div>