@using WebInvoice.Dto.QuantityType
@model ICollection<QuantityTypeDto>
@inject WebInvoice.Services.IUserCompanyTemp userCompanyData

<div class="row">
    <div class="container col-md-9">
        <h3 class="text-center">@userCompanyData.CompanyName</h3>
        <h3 class="text-center">Видове количества</h3>
        <div class="row justify-content-center">
            <table class="table table-hover col-10">
                <thead>
                    <tr>
                        <th scope="col">Тип</th>
                        <th scope="col">Описание</th>
                        <th scope="col">По подразбиране</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var quantityType in Model)
                    {
                    <tr>
                        <td>@quantityType.Type</td>
                        <td>@quantityType.Description</td>
                        <td>
                            @if (quantityType.IsActive)
                            {
                                @:ДА
                            }
                            else
                            {
                                @:НЕ
                            }
                        </td>
                        <td><a asp-area="" asp-controller="QuantityType" asp-action="Edit" asp-route-id="@quantityType.Id" class="btn btn-dark">Редактирай</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <a asp-area="" asp-controller="QuantityType" asp-action="Create" class="btn btn-light">Нов тип количество</a>
        </div>
    </div>
</div>